@using System.Web.Optimization
<!DOCTYPE html>
<html lang="ru-Ru">
<head>
    <link rel="shortcut icon" href="#">
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light nav-style">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Review</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                        @Html.ActionLink("Главная", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Review" ? "active" : "")">
                        @Html.ActionLink("Отзывы", "Index", "Review", null, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="content">
        <div class="main-content">
            <br />
            @RenderBody()
            <br />
        </div>  
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/knockout")
    @RenderSection("scripts", false)
</body>
</html>
